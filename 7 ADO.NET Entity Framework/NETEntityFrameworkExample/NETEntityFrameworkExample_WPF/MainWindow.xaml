<Window x:Class="NETEntityFrameworkExample_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NETEntityFrameworkExample_WPF"
        mc:Ignorable="d"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        
        Title="ADO.NET Entity Framework" Height="450" Width="1100">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnAllEmployees" Grid.Column="0" Margin="5" Grid.ColumnSpan="2"
                Content="All Employees" Click="btnAllEmployees_Click"/>

            <TextBox x:Name="txtJobTitle" Grid.Column="0" Margin="5" Grid.Row="1"
                 materialDesign:HintAssist.Hint="Job Title"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 VerticalAlignment="Center" />
            <Button x:Name="btnFetchEmployeesByJobTitle" Content="Search Employees by Job Title" Margin="5"
                Grid.Row="1" Grid.Column="1" Click="btnFetchEmployeesByJobTitle_Click"/>

            <TextBox x:Name="txtLastName" Grid.Column="0" Margin="5" Grid.Row="2"
                 materialDesign:HintAssist.Hint="Last Name"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 VerticalAlignment="Center" />
            <TextBox x:Name="txtFirstName" Grid.Column="1" Margin="5" Grid.Row="2"
                 materialDesign:HintAssist.Hint="First Name"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 VerticalAlignment="Center" />
            <Button x:Name="btnFetchEmployeeByFullName" Content="Search Employee by Last Name and First Name" Margin="5"
                Grid.Row="2" Grid.Column="2" Click="btnFetchEmployeeByFullName_Click"/>

            <TextBox x:Name="txtEmployeeID" Grid.Column="0" Margin="5" Grid.Row="3"
                 materialDesign:HintAssist.Hint="Employee ID"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 VerticalAlignment="Center" />
            <Button x:Name="btnFetchEmployeeByEmployeeID" Content="Search Employee by ID" Margin="5"
                Grid.Row="3" Grid.Column="1" Click="btnFetchEmployeeByEmployeeID_Click"/>
            <Label x:Name="lblEmployee" Grid.Column="3" Grid.Row="3" Margin="5" />
        </Grid>

        <DataGrid x:Name="dataEmployees" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
            <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeID}" />
            <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" />
            <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" />
            <DataGridTextColumn Header="Job Title" Binding="{Binding JobTitle}" />
            <DataGridTextColumn Header="Courtesy Title" Binding="{Binding CourtesyTitle}" />
            <DataGridTextColumn Header="Date Of Birth" Binding="{Binding DateOfBirth}" />
            <DataGridTextColumn Header="Hire Date" Binding="{Binding HireDate}" />
            <DataGridTextColumn Header="Orders" Binding="{Binding Orders}" />
        </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
